<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/iv_yl"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/abc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/line1"
        app:layout_constraintRight_toLeftOf="@+id/line2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <android.helper.widget.LeftImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/abc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/line1"
        app:layout_constraintRight_toLeftOf="@+id/iv_right"
        app:layout_constraintTop_toBottomOf="@+id/iv_yl"
        app:layout_constraintVertical_bias="0" />

    <android.helper.widget.RightImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:adjustViewBounds="true"
        android:src="@drawable/abc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_left"
        app:layout_constraintRight_toRightOf="@+id/iv_yl"
        app:layout_constraintTop_toBottomOf="@+id/iv_yl"
        app:layout_constraintVertical_bias="0" />


</androidx.constraintlayout.widget.ConstraintLayout>